<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="HighlightDark" Color="#40A578"/>
    <SolidColorBrush x:Key="Background" Color="#fefefe" />
    <SolidColorBrush x:Key="Foreground" Color="LightGray"/>
    <SolidColorBrush x:Key="HighlightLight" Color="#9DDE8B"/>
    <SolidColorBrush x:Key="Text" Color="#1e1e1e"/>
    <ImageBrush x:Key="WindowBackground" 
        ImageSource="lightTheme.png" 
        Stretch="UniformToFill" />
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="./FontSize.xaml" />
    </ResourceDictionary.MergedDictionaries >
</ResourceDictionary>